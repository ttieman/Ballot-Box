<main class="container container-fluid d-flex justify-content-evenly mt-5">
  <div class="card bg-info-subtle rounded-3 w-50 h-auto">
    <header class="card-header bg-secondary text-white">
      <div class="row">
        <h2 class="h2 col-12 text-white" id="login-title">
          Login
        </h2>
      </div>
    </header>
    <div class="card-body">
      <div class="row align-center p-1">
        <form class="form login-form">
          <div class="form-group h4 fw-bold m-3">
            <label for="username-login">Username:</label>
            <input
              class="form-control form-control-lg"
              type="text"
              id="username-login"
              aria-describedby="usernameHelp"
              placeholder="Enter username"
            />
          </div>

          <div class="form-group h4 fw-bold m-3">
            <label for="password-login">Password:</label>
            <input
              class="form-control form-control-lg"
              type="password"
              id="password-login"
              placeholder="Password"
            />
          </div>

          <div class="row justify-content-center">
            <div class="form-group col-sm-3 my-0">
              <button
                class="btn btn-primary btn-sm text-white fw-bold custom-btn"
                type="/login"
              ><a
                  class="text-white align-items-center align-self-center"
                  href="/login"
                >Login</a></button>
            </div>

            <div class="form-group col-sm-3 my-0 text-nowrap text-center">
              <button
                class="btn btn-primary btn-sm text-white fw-bold custom-btn"
                type="button"
              ><a class="text-white" href="/signup">Sign-Up</a></button>

            </div>
            <div
              class="d-flex justify-content-right align-items-right col-sm-3"
            >
              <img
                src="/images/Ballot-Hand.png"
                class="img-fluid"
                alt="A person putting their ballot into a box."
              />
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</main>

<script src="/js/login.js"></script>