
<header class='constainer text-center'>
  <div class='row secondary text-white'>
    <h1
      class='h1 --bs-body-color bg-secondary col-4 p-2 mx-5 mb-4 bg-info-subtle text-dark rounded-3 header'
    >
      Ballot-Box
    </h1>
  </div>
</header>
<main class='container container-fluid mt-5 rounded-top-5'>
  {{#each poll}}
    <div class='card bg-info-subtle m-3 rounded-4'>
      <header class='card-header bg-secondary text-white'>
        <div class='row justify-content-between'>
          <h2 class='h2 col-8 text-white'>
            <a class="text-white'" href='/post/{{id}}'>{{title}}</a>
          </h2>
          <div class='align-self-center col-4 text-end m-0'>Posted by
            {{user.username}}
            on
            {{format_date date_created}}</div>
        </div>
      </header>
      <div class='card-body'>
        <div class='row align-center mb-3'>

          <div class='col-md-12'>
            <p class='fs-5'>{{description}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</main>

