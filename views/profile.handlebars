<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-poll-form">
      <div class="form-group">
        <label for="poll-name">project name:</label>
        <input class="form-input" type="text" id="poll-name" name="poll-name" />
      </div>
      <div class="form-group">
        <label for="poll">needed funding ($):</label>
        <input class="form-input" type="number" id="poll" name="poll" />
      </div>
      <div class="form-group">
        <label for="poll-desc">description:</label>
        <textarea class="form-input" id="poll-desc" name="poll-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if polls.length}}
  <div class="col-md-6 poll-list">
    <h3>Current Projects:</h3>

    {{#each polls as |poll|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/poll/{{poll.id}}">{{poll.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{poll.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
