<main class="container">
  <div class="container">
    <div class="row">
      <div class="mt-3 col-5">
        <img src="/images/makeYourMark.gif" />
      </div>
      <div class="h3 col-7 fw-bold">
        <h2 class="title-desc">Join Ballot-Box and make your opinion count!</h2>
        <p class="description text-muted">Discover Ballot-Box, your one-stop solution for 
          real-time polling. Easily create custom polls, 
          share them globally, and gain instant insights.</p>
      </div>
    </div>

  </div>
  <div>
    <div class="container container-fluid d-flex rounded-top-5">
      <div
        id="allPollsContainer"
        class="container text-center fw-bold justify-content-sm-center"
      >
        {{#each polls}}
          {{!-- <div class="card bg-info-subtle mt-4 rounded-4 shadow-lg"> --}}
          <div class="card bg-info-subtle mt-4 p-3 rounded-4 shadow-lg">
            <header class="card-header --bs-body-color bg-secondary text-white">
              <div class="row">
                <h2 class="h2 col-8 text-white text-start">
                  <a class="text-white'" href="/poll/{{id}}">{{question}}</a>
                </h2>
                <div class="align-self-center col-3 text-end m-2">Posted by
                  {{user.username}}
                  on
                  {{format_date date_created}}</div>
              </div>
            </header>
            <div class="card-body shadow-lg">
              <div class="row align-center mb-2">
                <div class="col-md-3">
                  <picture>
                    <source srcset="..." type="image/svg+xml" />
                    <div class="checkmark">
                      <img
                        src="/images/Checkmark.png"
                        class="img-fluid"
                        alt="Box animated gif that is being given a checkmark."
                      />
                    </div>
                  </picture>
                  {{#each pollquestions}}
                    <p class="fs-3 text-start ps-4">{{answerText}}</p>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>

<script src="/js/homepage.js"></script>