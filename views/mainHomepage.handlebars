<main class="container fluid-container d-flex justify-content-sm-center p-2 bd-highlight">
  <div class="justify-content-center">
    <div
      id="computer-gif"
      class="col-lg-5 col-sm-3"
      style="d-inline-flex justify-content-center;width:75%;height:auto;padding-bottom:0%;margin-top:15px"
    >
      <iframe
        src="https://giphy.com/embed/l46Cy1rHbQ92uuLXa"
        min-width="50%"
        height="auto"
        margin="0px"
        style="position:static"
        frameBorder="0"
        class="giphy-embed"
        allowFullScreen
      ></iframe></div>

    <div class="container container-fluid d-flex mt-0 rounded-top-5">
      <div id="allPollsContainer" class="constainer text-center fw-bold justify-content-sm-center">
        {{#each polls}}
          <div class="card bg-info-subtle m-3 rounded-4">
            <header class="card-header --bs-body-color bg-secondary text-white">
              <div class="row">
                <h2 class="h2 col-8 mt-3 text-white text-start">
                  <a class="text-white'" href="/poll/{{id}}">{{question}}</a>
                </h2>
                <div class="align-self-center col-3 text-end m-2">Posted by
                  {{user.username}}
                  on
                  {{format_date date_created}}</div>
              </div>
            </header>
            <div class="card-body">
              <div class="row align-center mb-2">
                <div class="col-md-3">
                  <picture>
                    <source srcset="..." type="image/svg+xml" />
                    <div class="checkmark">
                      <img
                        src="/images/Checkmark.png"
                        class="img-fluid"
                        alt="Box animated gif that is being given a checkmark."
                      />
                    </div>
                  </picture>
                  {{#each pollquestions}}
                    <p class="fs-4 text-start ps-4">{{answerText}}</p>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>

<script src="/js/homepage.js"></script>