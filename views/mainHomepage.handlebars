<main
  class="container fluid-container d-flex justify-content-sm-center align-self-baseline ml-20 w-50"
>
  {{! class="container fluid-container d-flex justify-content-sm-center p-2 bd-highlight"
> }}
  <div>
    <div class="container fluid container align-self-start d-inline-flex mr-0 ml-0">
      <img
        src="/images/businessman-shaking-hands-with-client (2).jpg"
        class="img-fluid w-50"
        alt="Businessman shaking hands with client."
      />
    </div>
    <div class="container container-fluid d-flex mt-0 rounded-top-5">
      <div
        id="allPollsContainer"
        class="constainer text-center fw-bold justify-content-sm-center"
      >
        {{#each polls}}
          <div class="card bg-info-subtle m-3 rounded-4">
            <header class="card-header --bs-body-color bg-secondary text-white">
              <div class="row">
                <h2 class="h2 col-8 mt-3 text-white text-start">
                  <a class="text-white'" href="/poll/{{id}}">{{question}}</a>
                </h2>
                <div class="align-self-center col-3 text-end m-2">Posted by
                  {{user.username}}
                  on
                  {{format_date date_created}}</div>
              </div>
            </header>
            <div class="card-body">
              <div class="row align-center mb-2">
                <div class="col-md-3">
                  <picture>
                    <source srcset="..." type="image/svg+xml" />
                    <div class="checkmark">
                      <img
                        src="/images/Checkmark.png"
                        class="img-fluid"
                        alt="Box animated gif that is being given a checkmark."
                      />
                    </div>
                  </picture>
                  {{#each pollquestions}}
                    <p class="fs-4 text-start ps-4">{{answerText}}</p>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>

<script src="/js/homepage.js"></script>